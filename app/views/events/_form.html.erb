<%= form_with model: event do |f| %>
  <% if event.errors.any? %>
    <% event.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :datetime %>
  <%= f.datetime_local_field :datetime %>

  <%= f.label :location %>
  <%= f.text_area :location %>
  
  <%= f.submit %>
<% end %>